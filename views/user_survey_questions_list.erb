<h1>Welcome to <%= @survey.survey_name() %> </h1>

<% if @survey.questions().any?() %>
<h3> Here is a list of all questions you should answer </h3>
  <ul> <% @survey.questions.each() do |q| %>

    <li><%= q.question() %> </li>

     <form action='/user/<%=@survey.id()%>/survey_questions_list' method='post'>
       <input id="question_id" name="question_id" type="hidden" value="<%= q.id %>">
       <label for='answer'> Write your Answer Here:</label>
       <input id="answer" name='answer' type='text'>
       <button type='submit'>Submit Answer </button>
     </form>

    <% end %>
  </ul>
  <% else %>
  <h3>There are no questions </h3>
  <% end %>

<a href="/users/list_surveys">Return to User Home</a>
